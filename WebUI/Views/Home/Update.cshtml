@using Entities.DTOs;
@model WorkListDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" asp-controller="Home" method="post">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Update Todo</h5>
        </div>
        <div class="modal-body">

            <div>
                <div class="form-group">
                    <label>Title :</label>
                    <input asp-for="Title" type="text" name="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Description :</label>
                    <input type="text" asp-for="Definition" class="form-control" name="Definition" />
                </div>
                <div class="form-check form-control">
                    <input asp-for="IsCompleted" name="IsCompleted" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                       Is Completed ?
                    </label>
                </div>
                <div asp-validation-summary="All" class="text-danger">

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" data-dismiss="modal">Turn back </a>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</form>

