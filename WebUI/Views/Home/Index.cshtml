@using Entities.DTOs;
@model HomePageModel
@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">


<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />

<style>
    .app-container {
        height: 100vh;
        width: 100%;
    }

    .complete {
        text-decoration: line-through;
    }
</style>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tite</th>
            <th scope="col">Description</th>
            <th scope="col">IsCompleted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkListDtos)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Definition</td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="badge badge-success">Success</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Danger</span>
                    }
                </td>
                <td><a class="btn btn-outline-primary" asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">Update</a>
                    
                </td>
                <td>
                    <a class="btn btn-outline-danger" href="/Home/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="button" class="btn btn-outline-dark btn-sm" value="Add Todo" data-toggle="modal" data-target="#exampleModal" />




@* Add Modal*@
<form asp-action="Create" asp-controller="Home" method="post">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Todo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div>
                        <div class="form-group">
                            <label>Title :</label>
                            <input type="text" asp-for="CreateWorkDto.Title" name="Title" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Description :</label>
                            <input type="text" class="form-control" asp-for="CreateWorkDto.Definition" name="Definition" />
                        </div>
   
                    </div>
                    <div asp-validation-summary="All" class="alert-danger">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>



<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
